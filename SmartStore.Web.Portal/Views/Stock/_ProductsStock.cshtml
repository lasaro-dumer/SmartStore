@model IEnumerable<ProductModel>

@if (Model.Any())
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SellingPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StockBalance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastStockMovementDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellingPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StockBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastStockMovementDate)
                    </td>
                    <td>
                        <a asp-action="NewStockMovement" asp-route-productId="@item.Id" class="btn btn-sm btn-primary">
                            <span class="oi oi-plus"></span>New movement
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <span class="oi oi-pencil"></span>Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No products found</div>
}