@model OrderModel

<div>
    <h4>Order Details</h4>
    <hr />
    <div class="form-group row">
        <div class="col">
            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.CreditCarNumber)</label>
            <label>@Html.DisplayFor(model => model.CreditCarNumber, new { @class = "form-control-plaintext" })</label>
        </div>
        <div class="col">
            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.CreditCarCompany)</label>
            <label>@Html.DisplayFor(model => model.CreditCarCompany, new { @class = "form-control-plaintext" })</label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label class="font-weight-bold">
                @Html.DisplayNameFor(model => model.Creation)
            </label>
            <label>@Html.DisplayFor(model => model.Creation, new { @class = "form-control-plaintext" })</label>
        </div>
        <div class="col">
            <label class="font-weight-bold">
                @Html.DisplayNameFor(model => model.Updated)
            </label>
            <label>@Html.DisplayFor(model => model.Updated, new { @class = "form-control-plaintext" })</label>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label class="font-weight-bold">
                @Html.DisplayNameFor(model => model.Status)
            </label>
            <label>@Html.DisplayFor(model => model.Status, new { @class = "form-control-plaintext" })</label>
        </div>
        <div class="col">
            <label class="font-weight-bold">
                @Html.DisplayNameFor(model => model.Total)
            </label>
            <label>@Html.DisplayFor(model => model.Total, new { @class = "form-control-plaintext" })</label>
        </div>
    </div>
    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (OrderItemModel item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="History">Back to History</a>
    </div>
</div>
